    <div class="container">
        <!-- Jumbotron Header -->
        <header class="jumbotron my-sm-n5" style="background-color:#304040">
            <a class="btn btn-outline-light" asp-action="Index">Back to Full List</a>
            <h1 class="display-4 text-white">
                <b>
                    Reports
                </b>
            </h1>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Author") || User.IsInRole("Admin"))
            {
                <p>
                    <a class="btn btn-outline-light" asp-action="Create">New Report</a>
                </p>
            }
            <form asp-action="Index" method="get">
                <div class="form-actions text-white">
                    <p>
                        Search Reports: <input type="text" name="search" value="@ViewData["Search"]" />
                        <input type="submit" value="Search" class="btn btn-outline-light" />
                        <br />
                        @ViewData["ResultsCount"] result(s)
                        <br />
                    </p>
                </div>
            </form>
        </header>

        <div class="row text-center">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100" style="background-color: #304040">
                        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImgUrl)" width="500" height="200" alt="">
                        <div class="card-body text-white">
                            <h5>
                                <b>
                                    <a class="text-white" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                                </b>
                            </h5>
                            <div class="row text-left" style="color:#C9D1C8">
                                @Html.DisplayFor(modelItem => item.Summary)
                            </div>
                        </div>
                        <div class="card-footer">
                            <p class="row text-left" style="color:#C9D1C8">
                                Written by:&nbsp;<a class="text-white" asp-action="Index" asp-route-author=@item.Author.Split(' ').Last()>@Html.DisplayFor(modelItem => item.Author)</a><br />
                                Industry:&nbsp;<a class="text-white" asp-controller="Reports" asp-action="Index" asp-route-industry=@item.Industry>@Html.DisplayFor(modelItem => item.Industry)</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
