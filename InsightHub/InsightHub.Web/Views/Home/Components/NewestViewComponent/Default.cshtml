@model IEnumerable<InsightHub.Models.ReportModel>

@{
    ViewData["Title"] = "Top5NewestReports";
}

<h3 style="color:#04202C; font-family: Cambria">Newest Reports</h3>

<table class="table" style="background-color: #304040; border-radius:0.25rem">
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="col-lg-4">
                <td class="col-lg-4">
                    <div class="row text-center">
                        <div class="col-lg-12 float-left">
                            <a class="text-white float-left" style="font-family: Cambria; font-size: 20px; color:white" asp-area="" asp-controller="Reports" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                        </div>
                    </div>
                    <div class="row float-left">
                        <a class="col-lg-6 text-white" asp-area="" asp-controller="Reports" asp-action="Index" asp-route-industry=@item.Industry>@item.Industry</a>
                    </div>
                    <div class="col-lg-6 float-right" style="color:#C9D1C8">
                        <text class="text-right float-right">
                            @item.CreatedOn.ToShortDateString()
                        </text>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>