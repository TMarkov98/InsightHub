@model IEnumerable<InsightHub.Models.ReportModel>

@{
    ViewData["Title"] = "Top5MostDownloadedReports";
}



<h3 style="color:#04202C; font-family: Cambria">Most Popular Reports</h3>

<table class="table" style="background-color: #304040; border-radius:0.25rem">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImgUrl)" height="52" alt="">
                </td>
                <td class="text-white">
                    <a style="font-family: Cambria; font-size: 20px; color:white" asp-area="" asp-controller="Reports" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td class="text-white">
                    <a class="text-white" asp-area="" asp-controller="Reports" asp-action="Index" asp-route-industry=@item.Industry>@item.Industry</a>
                </td>
                <td style="color:#C9D1C8">
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
            </tr>
        }
    </tbody>
</table>