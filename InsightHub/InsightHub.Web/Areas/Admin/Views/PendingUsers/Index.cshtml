@model X.PagedList.StaticPagedList<InsightHub.Models.UserModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4" style="color:#04202C; font-family: Cambria">
    <b>
        Pending Users
    </b>
</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search Industries: <input type="text" name="search" value="@ViewData["Search"]" />
            <input type="submit" value="Search" class="btn btn-outline-dark" />
            <br />
            @ViewData["ResultsCount"] result(s)
        </p>
    </div>
</form>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Registered On
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Approve" asp-route-id="@item.Id">Approve</a>
                        <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="font-italic">No pending users found.</h4>
}

