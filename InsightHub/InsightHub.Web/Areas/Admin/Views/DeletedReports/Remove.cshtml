@model InsightHub.Models.ReportModel

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
<p/>
<h2>Permanently Delete @Html.DisplayFor(model => model.Title)</h2>

<h4>Are you sure you want to permanently delete this report?</h4>
<div>
    <form asp-action="Remove">
        <div class="form-group">
            <dl class="row">
                <dt class="col-sm-2">
                </dt>
                <dd class="col-sm-10">
                    <img src="@Html.DisplayFor(model => model.ImgUrl)" width="300" height="200" alt="">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dt>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Industry)
                </dt>
                <dt class="col-sm-10">
                    @Html.DisplayFor(model => model.Industry)
                </dt>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsFeatured)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFeatured)
                </dd>
            </dl>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Remove" class="btn btn-danger" />
        </div>
    </form>
</div>